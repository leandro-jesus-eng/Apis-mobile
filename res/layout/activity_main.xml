<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:keepScreenOn="true" >
        
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp" >

        <Button
            android:id="@+id/btColarVermelho"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_vermelho"
            android:text="Colar Vermelho" />

        <Button
            android:id="@+id/btColarVerde"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Colar Verde"
            android:background="@drawable/button_verde" />
        
        <Button
            android:id="@+id/btColarAmarelo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Colar Amarelo"
            android:background="@drawable/button_amarelo" />

    </LinearLayout>

    <View
    android:layout_width="match_parent"
    android:layout_height="10dp"
    android:background="@android:color/darker_gray"/>
     
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp" >
        
        <ToggleButton
            android:id="@+id/togglePastej"
            android:layout_width="wrap_content"            
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textOff="Pastej"
            android:textOn="Pastej" />
        
        <ToggleButton
            android:id="@+id/toggleOP"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textOff="OP"
            android:textOn="OP" />
        
        <ToggleButton
            android:id="@+id/toggleOD"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textOff="OD"
            android:textOn="OD" />
        
        <ToggleButton
            android:id="@+id/toggleRumPe"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textOff="RumPé"
            android:textOn="RumPé" />
        
        <ToggleButton
            android:id="@+id/toggleRumDeit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textOff="RumDeit"
            android:textOn="RumDeit" />
        
       </LinearLayout>
       
    <View
    android:layout_width="match_parent"
    android:layout_height="10dp"
    android:background="@android:color/darker_gray"/>
       
       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp" >
        
        <ToggleButton
            android:id="@+id/toggleAcMonta"
            android:layout_width="wrap_content"            
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textOff="AcMonta"
            android:textOn="AcMonta" />
        
        <ToggleButton
            android:id="@+id/toggleMontaOutra"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textOff="MontaOutra"
            android:textOn="MontaOutra" />
        
        <ToggleButton
            android:id="@+id/toggleInquiet"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textOff="Inquiet"
            android:textOn="Inquiet" />
       </LinearLayout>
       
       <View
    android:layout_width="match_parent"
    android:layout_height="10dp"
    android:background="@android:color/darker_gray"/>
       
       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp" >
        
        <ToggleButton
            android:id="@+id/toggleSombra"
            android:layout_width="wrap_content"            
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textOff="Sombra"
            android:textOn="Sombra" />
        
        <ToggleButton
            android:id="@+id/toggleSol"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textOff="Sol"
            android:textOn="Sol" />

        <EditText
            android:id="@+id/editObs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textMultiLine" />
       </LinearLayout>
       
       <View
    android:layout_width="match_parent"
    android:layout_height="10dp"
    android:background="@android:color/darker_gray"/>
       
       <Button
        android:id="@+id/btSalvar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salvar" >
     </Button>

</LinearLayout>